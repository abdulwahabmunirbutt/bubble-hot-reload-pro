{
  "manifest_version": 3,
  "name": "Bubble Hot Reload Pro",
  "version": "2.0",
  "description": "Hot reload Bubble Preview with global settings.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bubble Hot Reload Settings"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.bubbleapps.io/*", "https://bubble.io/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "icons/*", "injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}